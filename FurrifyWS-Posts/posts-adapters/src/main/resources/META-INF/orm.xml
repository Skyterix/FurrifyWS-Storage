<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings version="2.1"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm">

    <description>XML Mapping file</description>

    <entity class="ws.furrify.posts.media.MediaSnapshot" access="FIELD">
        <table name="media"/>
        <attributes>
            <id name="id">
                <generated-value strategy="SEQUENCE"/>
            </id>
            <basic name="mediaId">
                <column unique="true" updatable="false" nullable="false"/>
            </basic>
            <basic name="postId">
                <column updatable="false" nullable="false"/>
            </basic>
            <basic name="ownerId">
                <column updatable="false" nullable="false"/>
            </basic>
            <basic name="priority">
                <column nullable="false"/>
            </basic>
            <basic name="filename">
                <column nullable="false"/>
            </basic>
            <basic name="fileHash">
                <column nullable="false"/>
            </basic>
            <basic name="extension">
                <column nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="fileUrl">
                <column nullable="true"/>
            </basic>
            <basic name="thumbnailUrl">
                <column nullable="true"/>
            </basic>
            <basic name="status">
                <column nullable="false"/>
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="createDate">
                <column updatable="false" nullable="false"/>
            </basic>
        </attributes>
    </entity>

    <entity class="ws.furrify.posts.post.PostSnapshot" access="FIELD">
        <table name="posts"/>
        <attributes>
            <id name="id">
                <generated-value strategy="SEQUENCE"/>
            </id>
            <basic name="postId">
                <column unique="true" updatable="false" nullable="false"/>
            </basic>
            <basic name="ownerId">
                <column updatable="false" nullable="false"/>
            </basic>
            <basic name="title">
                <column nullable="false"/>
            </basic>
            <basic name="description">
                <column nullable="true"/>
            </basic>
            <basic name="createDate">
                <column updatable="false" nullable="false"/>
            </basic>
            <element-collection fetch="EAGER" name="tags">
                <collection-table name="post_tags">
                    <join-column name="postId"/>
                </collection-table>
            </element-collection>
            <element-collection fetch="EAGER" name="artists">
                <collection-table name="post_artists">
                    <join-column name="postId"/>
                </collection-table>
            </element-collection>
        </attributes>
    </entity>

    <embeddable class="ws.furrify.posts.post.vo.PostTag" access="FIELD">
        <attributes>
            <basic name="value">
                <column nullable="false"/>
            </basic>
            <basic name="type">
                <column nullable="false"/>
            </basic>
        </attributes>
    </embeddable>
    <embeddable class="ws.furrify.posts.post.vo.PostArtist" access="FIELD">
        <attributes>
            <basic name="artistId">
                <column nullable="false"/>
            </basic>
            <basic name="preferredNickname">
                <column nullable="false"/>
            </basic>
        </attributes>
    </embeddable>
</entity-mappings>
